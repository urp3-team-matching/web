generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql" // 또는 사용하시는 DB
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // 필요시
}

enum ProposerType {
  PROFESSOR
  STUDENT
  HOST
}

model Project {
  id            Int          @id @default(autoincrement())
  name          String
  viewCount     Int          @default(0)
  background    String
  method        String
  objective     String
  result        String
  attachments   String[]
  keywords      String[]
  proposerName  String
  proposerType  ProposerType
  proposerMajor String?

  passwordHash String @map("password")

  createdDatetime DateTime @default(now())
  updatedDatetime DateTime @updatedAt

  applicants Applicant[]
}

model Applicant {
  id           Int    @id @default(autoincrement())
  name         String
  email        String
  major        String
  phone        String
  introduction String
  passwordHash String @map("password")

  createdDatetime DateTime @default(now())
  updatedDatetime DateTime @updatedAt

  // Relations
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String
  content      String
  author       String
  attachments  String[]
  viewCount    Int      @default(0)
  passwordHash String   @map("password")

  createdDatetime DateTime @default(now())
  updatedDatetime DateTime @updatedAt
}
